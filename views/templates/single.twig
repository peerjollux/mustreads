{% extends "templates/base.twig" %}

{% block content %}
  <section class="cover-section" style="background-color: {{ book.get_field('book_background_color') }}">
    <img src="{{ TimberImage(book.book_cover).src|resize(400) }}" alt="{{ TimberImage(book.book_cover).alt }}" class="cover-section__image">
  </section>

  <section class="details-section">
    <div class="details-section__wrapper">
      <h1 class="details__title">
        {{ book.get_field('book_title') }}
      </h1>
      <span class="details__author">
        {{ book.get_field('book_author') }}
      </span>

      <div class="details__categories">
        {% for term in book.terms %}
          <a href="{{ term.link }}" class="tag">{{ term }}</a>
        {% endfor %}
      </div>
      <div class="details__description">
        {{ book.get_field('book_description') }}
      </div>

      <div class="clearfix"> </div>

      <a href="#" class="btn btn--blue details__link">Get the book</a>
    </div>
  </section>


  <div class="clearfix"> </div>

  <section class="categoryList-section" id="categories">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <h2>Categories</h2>
        </div>
      </div>
      <div class="row">
        {% for category in categories %}
          {% if category.name != "Uncategorized" %}
            <div class="col-xs-12 col-sm-6 col-md-4">
              <a href="{{ category.link }}" class="categoryList__link">
                {{ category.name }}
              </a>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </section>
{% endblock %}
