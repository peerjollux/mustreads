<section class="categoryList-section" id="categories">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h2>Categories</h2>
      </div>
    </div>
    <div class="row">
      {% for category in categories %}
        {% if category.name != "Uncategorized" %}
          <div class="col-xs-12 col-sm-6 col-md-4">
            <a href="{{ category.link }}" class="categoryList__link">
              {{ category.name }}
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>
